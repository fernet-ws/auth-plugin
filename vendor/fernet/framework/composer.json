{
    "name": "fernet/framework",
    "description": "The Fernet Framework",
    "type": "library",
    "keywords": ["framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Rodrigo 'Albo' Arce",
            "email": "albo@pragmore.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "symfony/http-foundation": "^5.2",
        "monolog/monolog": "^2.2",
        "league/container": "^3.3",
        "vlucas/phpdotenv": "^5.2",
        "nikic/fast-route": "^1.3",
        "symfony/browser-kit": "^5.2",
        "symfony/css-selector": "^5.2",
        "filp/whoops": "^2.12",
        "symfony/yaml": "^5.2",
        "doctrine/cache": "^1.10"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9.5",
        "behat/behat": "^3.8",
        "php-coveralls/php-coveralls": "^2.4",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": {"Fernet\\": "src/Fernet"},
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {"Fernet\\Tests\\": "tests/Fernet/Tests"}
    },
    "minimum-stability": "dev",
    "prefer-stable": true        
}
